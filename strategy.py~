class Strategy:
    def __init__(self, threshold=521.25):
        self.signals = []
        self.threshold = threshold

    def on_bar(self, event):
        bar = event.bar
        if bar["Close"] > self.threshold:
            self.signals.append({
                "timestamp": bar["timestamp"],
                "signal": "BUY",
                "price": bar["Close"]
            })
